{
    "env": {
      "browser": true,
      "mocha": true,
    },

    "extends": "airbnb",

    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "plugins": [
        "react"
    ],

    rules:{
        "no-console": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "react/jsx-filename-extension": [
            1, { "extensions": [".js", ".jsx"] }
        ],
        function-paren-newline: [
            "error",
            "consistent"
        ],
        class-methods-use-this: 0,
        "react/prefer-stateless-function": 0
    }
}
